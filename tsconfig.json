{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES6",
    "module": "ES6",
    "lib": ["ES6"],
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
